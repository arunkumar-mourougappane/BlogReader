<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/featuredImageList"
        android:contentDescription="@string/featuredImage"
        android:layout_alignParentStart="false"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView"
        android:layout_toRightOf="@+id/featuredImageList"
        android:layout_toEndOf="@+id/featuredImageList"
        android:textStyle="bold"
        android:textColor="#000000"
        android:linksClickable="true"
        android:singleLine="true"
        android:textIsSelectable="true" />

    <TextView
        android:layout_width="307dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView2"
        android:autoLink="all|web|phone|map|email"
        android:layout_toRightOf="@+id/featuredImageList"
        android:layout_toEndOf="@+id/featuredImageList"
        android:layout_below="@+id/textView"
        android:textColor="#2c2c2c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/featuredImageList"
        android:layout_toRightOf="@+id/featuredImageList"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:textColor="@color/background_material_dark" />

</RelativeLayout>
